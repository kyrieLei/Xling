{
  "manifest_version": 3,
  "name": "Xling",
  "description": "AI-assisted typing helper that can translate or polish text as you type.",
  "version": "0.5.0",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.deepseek.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Xling",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
